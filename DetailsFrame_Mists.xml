<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
<Script file="DetailsFrame_Script.lua"/>
	    <Frame name="DetailsFrame" enableMouse="true" inherits="InsetFrameTemplate" parent="MoPReportFrame" hidden="true">
        <Size x="380" y="435" />
        <Anchors>
            <Anchor relativeTo="MoPReportFrame" relativePoint ="TOPRIGHT" point="TOPLEFT" y="-42" x="0" />
        </Anchors>
		<Layers>
            <Layer name="ProfessionBackgroundUpper" level="BACKGROUND">
                <Texture parentKey="BackgroundOverlay" atlas="tradeskill-background-recipe">
                    <TexCoords top="0" left="0.4" bottom="1.0" right="1.0"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="TopCornerConnection" atlas="collections-background-corner" desaturated="true">
                    <Size x="30" y="22" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="20" />
                    </Anchors>
                    <TexCoords top="1" left="0" bottom="0" right="1.0"/>
                </Texture>
                <Texture name="BottomCornerConnection" atlas="collections-background-corner" desaturated="true">
                    <Size x="30" y="22" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="0" y="-20" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="CloseButton" inherits="UIPanelCloseButtonNoScripts">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="3" y="3"/>
                </Anchors>
                <Scripts>
                    <OnClick function="DetailsClose" />
                </Scripts>
            </Button>
            <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate">
                <Size x="335" y="395"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-30"/>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size x="320" y="380"/>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parentText" inherits="GameFontHighlight" text="">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="0" y="0"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
        </Frames>
        <Scripts>
        <OnLoad function="DetailsFrame_OnLoad"/>
        </Scripts>
		</Frame>
</Ui>